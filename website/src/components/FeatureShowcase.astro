---
interface Props {
  title: string;
  description: string;
  reversed?: boolean;
}

const { title, description, reversed } = Astro.props;
---

<div
  class:list={[
    "mx-auto flex max-w-5xl flex-col items-center gap-12 lg:flex-row",
    reversed && "lg:flex-row-reverse",
  ]}
>
  <div class="w-full lg:w-3/5">
    <slot name="image" />
  </div>
  <div class="w-full lg:w-2/5">
    <h3
      class="text-balance text-2xl font-medium text-x-text"
      style="font-family: 'Spectral', Georgia, serif"
    >
      {title}
    </h3>
    <p class="mt-3 text-pretty text-base leading-relaxed text-x-text-secondary">
      {description}
    </p>
  </div>
</div>
