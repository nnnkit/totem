---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="overflow-hidden rounded-xl border border-x-border bg-x-card shadow-2xl">
  <div class="flex items-center border-b border-x-border px-4 py-3">
    <div class="flex gap-2">
      <span class="size-3 rounded-full bg-red-400/80"></span>
      <span class="size-3 rounded-full bg-yellow-400/80"></span>
      <span class="size-3 rounded-full bg-green-400/80"></span>
    </div>
    <span class="flex-1 text-center text-xs text-x-text-secondary">{title}</span>
    <div class="w-14"></div>
  </div>
  <slot />
</div>
